{
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "TA_VERSION='${nextRelease.version}' APP_PACKAGE_FILENAME=$GITHUB_WORKSPACE/dist/TA_CTIS_TAXII-${nextRelease.version}.tar.gz ./install_deps_and_package.sh"
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "mkdocs build -v --config-file ./docs/ctis-taxii-splunk-app/mkdocs.yml && mv docs/ctis-taxii-splunk-app/site/documentation.pdf $GITHUB_WORKSPACE/dist/ctis-taxii-splunk-app-documentation-v${nextRelease.version}.pdf"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          { "path": "dist/*.tar.gz", "label": "App Build" },
          { "path": "dist/ctis*.pdf", "label": "Documentation v${nextRelease.version}" }
        ]
      }
    ]
  ]
}
