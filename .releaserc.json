{
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "TA_VERSION='${nextRelease.version}' APP_PACKAGE_FILENAME=$GITHUB_WORKSPACE/dist/TA_CTIS_TAXII-${nextRelease.version}.tar.gz ./install_deps_and_package.sh"
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "mkdocs build -v --config-file ./docs/ctis-taxii-splunk-app/mkdocs.yml"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          { "path": "dist/*.tar.gz", "label": "App Build" },
          { "path": "docs/ctis-taxii-splunk-app/documentation.pdf", "label": "Documentation" }
        ]
      }
    ]
  ]
}
